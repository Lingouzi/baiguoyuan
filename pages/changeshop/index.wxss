/* pages/changeshop/index.wxss */
page{
  background-color: #f6f6f6;
}
.list{
  border-top: 1rpx solid #eee;
  padding: 25rpx;
  color: #333;
  background-color: #fff;
}
.active{
  position: relative;
}
.active::before{
  position: absolute;
  width: 0rpx;
  height: 0rpx;
  top:0;
  left: 0;
  content: '';
  border: 20rpx solid transparent;
  border-top-color: #fda640;
  border-left-color: #fda640;
}
.active::after{
  position: absolute;
  width: 25rpx;
  height: 25rpx;
  top:0;
  left: 0;
  content: '';
  background: url('data:image/svg+xml;base64,') no-repeat;
  background-size: 25rpx;
}
.title{
  font-size: 32rpx;
  font-weight: 300;
}
.listcont{
  display: flex;
  justify-content: space-between;
  align-items:flex-start;
}
.psty2{
  font-size: 28rpx;
  margin-top: 13rpx;
  margin-bottom: 15rpx;
}
.psty3{
  color: #999;
  font-size: 24rpx;
}
.psty4{
  font-size: 24rpx;
  color: #333;
